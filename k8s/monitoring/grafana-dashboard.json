{
  "dashboard": {
    "id": null,
    "title": "Portfolio Service v2.0.0 - Performance Dashboard",
    "tags": ["portfolio-service", "performance", "opentelemetry"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "RED Metrics Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Request Rate (RPS)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"globeco-portfolio-service\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 1},
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"globeco-portfolio-service\",status_code=~\"5..\"}[5m]) / rate(http_requests_total{service=\"globeco-portfolio-service\"}[5m]) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Response Duration (P95)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 1},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"globeco-portfolio-service\"}[5m]))",
            "legendFormat": "P95 Duration",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Performance Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 6,
        "title": "Bulk Operation Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"globeco-portfolio-service\",endpoint=\"/api/fast/portfolios/bulk\"}[5m]))",
            "legendFormat": "P95 Bulk Create",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"globeco-portfolio-service\",endpoint=\"/api/fast/portfolios/bulk\"}[5m]))",
            "legendFormat": "P50 Bulk Create",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0,
            "max": 0.5
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "evaluator": {"params": [0.2], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "30s",
          "handler": 1,
          "name": "Bulk Operation Performance Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Resource Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\".*globeco-portfolio-service.*\"}[5m]) * 1000",
            "legendFormat": "CPU Usage (millicores)",
            "refId": "A"
          },
          {
            "expr": "container_memory_usage_bytes{pod=~\".*globeco-portfolio-service.*\"} / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "CPU (millicores) / Memory (MB)",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Operations",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 9,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19},
        "targets": [
          {
            "expr": "mongodb_connection_pool_active{service=\"globeco-portfolio-service\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "mongodb_connection_pool_available{service=\"globeco-portfolio-service\"}",
            "legendFormat": "Available Connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0,
            "max": 25
          }
        ]
      },
      {
        "id": 10,
        "title": "Circuit Breaker Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 19},
        "targets": [
          {
            "expr": "circuit_breaker_state{service=\"globeco-portfolio-service\"}",
            "legendFormat": "{{circuit_name}} State",
            "refId": "A"
          },
          {
            "expr": "rate(circuit_breaker_requests_total{service=\"globeco-portfolio-service\"}[5m])",
            "legendFormat": "{{circuit_name}} Requests/sec",
            "refId": "B"
          }
        ]
      },
      {
        "id": 11,
        "title": "Health and Availability",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "collapsed": false
      },
      {
        "id": 12,
        "title": "Pod Availability",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "kube_deployment_status_replicas_available{deployment=\"globeco-portfolio-service\"} / kube_deployment_spec_replicas{deployment=\"globeco-portfolio-service\"} * 100",
            "legendFormat": "Pod Availability",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Health Check Response Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"globeco-portfolio-service\",endpoint=~\"/health/.*\"}[5m]))",
            "legendFormat": "P95 Health Check Duration",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0,
            "max": 0.01
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "evaluator": {"params": [0.01], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "30s",
          "handler": 1,
          "name": "Health Check Performance Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up{service=\"globeco-portfolio-service\"}, environment)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        },
        {
          "name": "pod",
          "type": "query",
          "query": "label_values(up{service=\"globeco-portfolio-service\", environment=\"$environment\"}, pod)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(kube_deployment_status_observed_generation{deployment=\"globeco-portfolio-service\"}[5m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment",
          "textFormat": "New deployment detected"
        }
      ]
    }
  }
}